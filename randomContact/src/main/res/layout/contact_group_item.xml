<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/text_margin"
                android:layout_marginTop="@dimen/card_margin"
                android:paddingTop="@dimen/padding_small">

    <RadioButton
        android:id="@+id/radioSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/radioSelected"
        android:layout_toRightOf="@+id/radioSelected"
        android:layout_toLeftOf="@+id/btnDeleteContactGroup"
        android:layout_toStartOf="@+id/btnDeleteContactGroup"
        android:gravity="center_vertical"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/btnDeleteContactGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:padding="@dimen/padding_small"
        android:src="@drawable/ic_delete"/>
</RelativeLayout>
