<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:padding="@dimen/card_padding"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_random_contact_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_large"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:text="@string/empty_text"
        android:drawableTop="@drawable/material_bg"
        android:drawablePadding="@dimen/card_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <Button
        android:id="@+id/btnProvideAccess"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/color_almost_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin"
        android:text="@string/str_btn_provide_acces"/>
</LinearLayout>