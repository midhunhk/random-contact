<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:paddingTop="@dimen/unit_s">

    <RadioButton
        android:id="@+id/radioSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@+id/btnEditContactGroup"
        android:layout_toLeftOf="@+id/btnEditContactGroup"
        android:textSize="18sp"
        tools:text="@tools:sample/cities" />

    <ImageButton
        android:id="@+id/btnEditContactGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toStartOf="@+id/btnDeleteContactGroup"
        android:layout_toLeftOf="@+id/btnDeleteContactGroup"
        android:background="@android:color/transparent"
        android:contentDescription="@string/empty_text"
        android:padding="@dimen/unit_s"
        android:layout_marginRight="@dimen/unit_l"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit_group"
        app:tint="?attr/colorOnSurface" />

    <ImageButton
        android:id="@+id/btnDeleteContactGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/empty_text"
        android:padding="@dimen/unit_s"
        app:srcCompat="@drawable/ic_remove_group"
        app:tint="?attr/colorOnSurface" />

</RelativeLayout>
