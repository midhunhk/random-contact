<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/unit_m"
    android:layout_marginEnd="@dimen/unit_m"
    android:layout_marginRight="@dimen/unit_m"
    android:layout_centerVertical="true"
    android:paddingTop="@dimen/unit_s">

    <RadioButton
        android:id="@+id/radioSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/cities"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:id="@+id/btnEditContactGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/btnDeleteContactGroup"
        android:layout_toLeftOf="@+id/btnDeleteContactGroup"
        android:background="@android:color/transparent"
        android:contentDescription="@string/empty_text"
        android:layout_centerInParent="true"
        android:padding="@dimen/unit_s"
        app:tint="?attr/colorOnSurface"
        app:srcCompat="@drawable/ic_edit_group" />

    <ImageButton
        android:id="@+id/btnDeleteContactGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/empty_text"
        android:layout_centerInParent="true"
        android:padding="@dimen/unit_s"
        app:tint="?attr/colorOnSurface"
        app:srcCompat="@drawable/ic_remove_group" />
</RelativeLayout>
