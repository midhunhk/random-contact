<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomContact" parent="Theme.RandomContact.Base">
    </style>

    <style name="Theme.RandomContact.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_random_blue_500</item>
        <item name="colorPrimaryVariant">@color/color_random_blue_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_radical_red_300</item>
        <item name="colorSecondaryVariant">@color/color_radical_red_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/color_matterhorn_brown</item>
        <!-- Window background of the app -->
        <item name="android:colorBackground">@color/color_charcoal</item>
        <!-- color for sheets of material like cards and bottom sheets -->
        <item name="colorSurface">@color/color_matterhorn_brown</item>
        <item name="colorOnSurface">@color/color_alabaster_white</item>
        <!-- Customize your theme here. -->
        <item name="scrimBackground">@color/app_black_900_alpha_085</item>
        <item name="elevationOverlayEnabled">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <!--
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        -->
    </style>
</resources>